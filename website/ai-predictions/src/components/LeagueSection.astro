---
const { league, predictions } = Astro.props;
---

<section class="mb-24" id={league.replace(/\s+/g, '-').toLowerCase()} data-league={league}>
  <div class="flex items-center space-x-6 mb-10">
    <img src={predictions[0].league_logo} alt={league} class="w-20 h-20 rounded-full shadow-lg" />
    <h2 class="text-4xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-blue-400 to-purple-400">{league}</h2>
  </div>
  
  <slot />
</section>